<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_">

    <ImageView
        android:id="@+id/guide_nav"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="218dp"
        android:layout_marginStart="68dp"
        app:srcCompat="@drawable/daohang"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/guide_map"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="153dp"
        android:layout_marginStart="52dp"
        app:srcCompat="@drawable/map"
        android:layout_alignBottom="@+id/guide_nav"
        android:layout_toEndOf="@+id/guide_nav" />

    <ImageView
        android:id="@+id/guide_main"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/zhuye" />

    <ImageView
        android:id="@+id/guide_face"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="102dp"
        android:background="@drawable/touming"
        app:srcCompat="@drawable/face"
        android:layout_alignTop="@+id/guide_map"
        android:layout_toEndOf="@+id/guide_main" />

    <ImageView
        android:id="@+id/guide_coustom"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/touming"
        app:srcCompat="@drawable/coustom"
        android:layout_alignTop="@+id/guide_nav"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="主  页"
        android:textSize="30sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="23dp"
        android:text="建立地图"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/guide_face"
        android:layout_alignEnd="@+id/guide_map" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导  航"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_below="@+id/guide_map"
        android:layout_alignStart="@+id/guide_nav"
        android:layout_marginStart="51dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="人脸识别"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/guide_face" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系客服"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/guide_coustom"
        android:layout_alignEnd="@+id/guide_coustom" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/dart"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
