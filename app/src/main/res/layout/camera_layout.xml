<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <SurfaceView
        android:id="@+id/camera_sf"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_weight="0.37"
        android:layout_marginStart="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="开始拍照"
        android:textSize="16sp"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/camera_sf" />

    <TextView
        android:id="@+id/camera_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请对准脸部哦！"
        android:textSize="15sp"
        android:layout_marginTop="213dp"
        android:layout_marginStart="60dp"
        android:layout_alignTop="@+id/camera_sf"
        android:layout_toEndOf="@+id/camera_sf" />

    <ImageView
        android:id="@+id/cam_main"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        app:srcCompat="@drawable/zhuye_n" />

    <ImageView
        android:id="@+id/cam_shiping"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/cam_main"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/cam_main"
        app:srcCompat="@drawable/shiping_n" />
</RelativeLayout>
